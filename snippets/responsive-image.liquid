{%- assign image_sizes = sizes | split: "," -%}
{%- capture srcset -%}
  {%- for size in image_sizes -%}
    {%- liquid
				assign small_size = '20x'
    		assign size_array = size | split: "x"
				assign size_width = size_array[0]
				if size_array[0] != "0"
					assign size_x = size_array[0] | append: 'x'
				else
					assign size_width = image.width | times: size_array[1] | divided_by: image.height | floor
				endif
    		if size_array[1] != "0"
      		assign size_x = size
      		assign small_x = size_array[1] | times: 20 | divided_by: size_array[0] | floor
  				assign small_size = small_size | append: small_x
    		endif
		-%}
    {{- image.src | img_url: size_x, crop: 'center' }} {{ size_width }}w,
  {%- endfor -%}
{%- endcapture -%}
{%- liquid
	assign l = srcset | size | minus: 1
	assign w = image.width
	assign h = image.height
	if retina
		assign w = image.width | divided_by: 2
		assign h = image.height | divided_by: 2
	endif

	assign focal_point = image.presentation.focal_point

	capture src
		if settings.lazy_loading
			echo image.src | img_url: small_size, crop: 'center'
		else
			echo image.src | img_url: image_sizes[0], crop: 'center'
		endif
	endcapture
-%}

{% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
<img class="lazyload{% unless settings.lazy_loading %} no-blur{% endunless %}{% if retina %} retina_size{% endif %} {{ class | escape }}" width="{{ w }}" height="{{ h }}" data-sizes="auto" src="{{- src -}}" data-srcset="{{ srcset | slice: 0, l | strip_newlines -}}" alt="{{ image.alt | escape }}" {% if focal_point -%}style="object-position: {{ focal_point }};"{% endif %} />
<noscript>
<img width="{{ image.width }}" height="{{ image.height }}" sizes="auto" src="{{- image.src | img_url: image_sizes[0], crop: 'center' -}}" srcset="{{ srcset | slice: 0, l | strip_newlines }}" alt="{{ image.alt | escape }}" loading="lazy" {% if focal_point -%}style="object-position: {{ focal_point }};"{% endif %} />
</noscript>{% comment %}theme-check-enable ImgLazyLoading{% endcomment %}
