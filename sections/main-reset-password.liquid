{{ 'login-register.css' | asset_url | stylesheet_tag }}
<div class="row">
	<div class="small-12 columns">
    <div class="thb-form-container">
      <div class="thb-login-form">
        {% form 'reset_customer_password' %}
					<h4> {{ 'customer.reset_password.title' | t }}</h4>
					<p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>
					{% if form.errors %}
					<div class="form-notification error">
						{% render 'svg-icons' with 'thb-error' %} {{ form.errors | default_errors }}
					</div>
					{% endif %}
          <div class="field">
            <input type="password" value="" id="password" name="customer[password]" size="16" placeholder="{{ 'customer.reset_password.password' | t }}" />
	        	<label for="password">{{ 'customer.reset_password.password' | t }}</label>
          </div>
          <div class="field">
            <input type="password" value="" id="password_confirmation" name="customer[password_confirmation]" size="16" placeholder="{{ 'customer.reset_password.password_confirm' | t }}" />
	        	<label for="password_confirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
          </div>
          <div class="field">
            <button type="submit" class="button"><span>{{ 'customer.reset_password.submit' | t }}</span></button>
          </div>
        {% endform %}
      </div>
	  </div>
	</div>
</div>
