{{- 'customer-reviews.css' | asset_url | stylesheet_tag -}}
{%- liquid
	assign section_heading = section.settings.heading
	assign section_description = section.settings.description
	assign columns = section.settings.columns
	assign pagination = section.settings.pagination
	assign autoplay = section.settings.autoplayheading
	assign color_heading = section.settings.color_heading
	assign color_text = section.settings.color_text
	assign disable_top_spacing = section.settings.disable_top_spacing
	assign disable_bottom_spacing = section.settings.disable_bottom_spacing

	if autoplay
		assign autoplay = section.settings.autoplay_length | times: 1000
	endif

	assign color_bg = section.settings.color_bg | downcase
	assign color_body_bg = settings.color_body_bg | downcase

	assign has_bg = true
	if color_body_bg == color_bg or color_bg == 'transparent' or color_bg == 'rgba(0,0,0,0)'
		assign has_bg = false
	endif

	case columns
		when 3
			assign columns_class = 'medium-4'
		when 4
			assign columns_class = 'medium-6 large-3'
		when 5
			assign columns_class = 'medium-1/5 large-1/5'
		when 6
			assign columns_class = 'medium-3 large-2'
	endcase

-%}

<customer-reviews class="customer-reviews section-spacing-padding{% if disable_top_spacing %} section-spacing--disable-top{% endif %}{% if disable_bottom_spacing %} section-spacing--disable-bottom{% endif %}" style="--color-bg:{{ color_bg }}; --color-heading:{{ color_heading }}; --color-text:{{ color_text }}; --dot-speed: {{ autoplay | divided_by: 1000 | append: 's' }};">
	<div class="row">
		<div class="small-12 columns">
			{%- render 'section-header', section_heading: section_heading, section_description: section_description -%}
			<slide-show class="customer-reviews--carousel" data-autoplay="2500" data-align="left" data-dots="true">
				{%- for block in section.blocks -%}
					{%- liquid
						assign product_handle = block.settings.product_handle
						assign review_product = all_products[product_handle]
					-%}
				<div class="small-12 {{ columns_class }} columns carousel__slide">
					<div class="customer-reviews--review {% if has_bg -%}customer-reviews--review--has-bg{% endif %}" {{ block.shopify_attributes }}>
						{%- if product_handle != blank -%}
							<div class="customer-reviews--product">
								{%- if review_product.featured_image -%}
									<a href="/products/{{ review_product.handle }}">{%- render 'responsive-image', image: review_product.featured_image, sizes: '300x250,600x500' -%}</a>
								{%- else -%}
									<div class="thb-placeholder">
										<a href="/products/{{ review_product.handle }}">{{ 'product-1' | placeholder_svg_tag }}</a>
									</div>
								{%- endif -%}
								<div class="customer-reviews--quick-view" data-product-handle="{{ review_product.handle }}">
									<a href="/products/{{ review_product.handle }}">{%- render 'svg-icons' with 'thb-awesome-arrow' %}</a>
									{%- unless hotspot_product == empty -%}
										<div class="loading-overlay">
											{% render 'svg-icons' with 'thb-loading' %}
										</div>
									{%- endunless -%}
								</div>
								<!-- <quick-view class="customer-reviews--quick-view" data-product-handle="{{ review_product.handle }}">
									{%- render 'svg-icons' with 'thb-add-to-cart' %}
									{%- unless hotspot_product == empty -%}
										<div class="loading-overlay">
											{% render 'svg-icons' with 'thb-loading' %}
										</div>
									{%- endunless -%}
								</quick-view> -->
							</div>
						{%- endif -%}
						<div class="customer-reviews--content">
							{%- if block.settings.stars and block.settings.stars != '' -%}
								<div class="star-rating" style="--star-rating: {{ block.settings.stars }};"></div>
							{%- endif -%}
							{%- if block.settings.heading != blank -%}
							<h6>{{ block.settings.heading }}</h6>
							{%- endif -%}
							<p>{{ block.settings.text | newline_to_br }}</p>
							{%- if block.settings.author != blank -%}
							<div class="customer-reviews--author">
								{%- if block.settings.author_image != blank -%}
									{%- render 'responsive-image', image: block.settings.author_image, sizes: '64x64' -%}
								{%- endif -%}
								<span>{{- block.settings.author -}}<br>{%- if block.settings.author_title != blank -%}<span class="author--title">{{- block.settings.author_title -}}</span>{%- endif -%}</span>
								
							</div>
							{%- endif -%}

						</div>
					</div>
				</div>
				{%- endfor -%}
				{%- if section.blocks.size > columns -%}
				<div class="flickity-nav flickity-prev" tabindex="0">{% render 'svg-icons' with 'carousel-prev' %}</div>
				<div class="flickity-nav flickity-next" tabindex="0">{% render 'svg-icons' with 'carousel-next' %}</div>
				{%- endif -%}
			</slide-show>
		</div>
	</div>
</customer-reviews>
{% schema %}
  {
	"name": "Customer reviews",
		"class": "section-customer-reviews",
	"settings": [
			{
				"type": "text",
				"id": "heading",
				"label": "Heading",
				"default": "Customer reviews"
			},
