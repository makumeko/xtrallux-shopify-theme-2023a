			"label": "Heading",
						"default": "Review heading"
		  },
		  {
			"type": "textarea",
			"id": "text",
			"label": "Text",
			"default": "Add your customer review here to showcase them."
		  },
					{
				  "type": "header",
				  "content": "Author"
				},
		  {
			"id": "author",
			"type": "text",
			"label": "Name",
						"default": "Review author"
		  },
					{
						"type": "image_picker",
						"id": "author_image",
						"label": "Avatar"
					},
					{
							  "type": "header",
							  "content": "Author Title / Location"
							},
					  {
						"id": "author_title",
