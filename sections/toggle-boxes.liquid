			},
			{
	      "type": "header",
	      "content": "Colors"
	    },
			{
				"type": "color",
				"id": "color_bg",
				"label": "Background",
				"default": "#ffffff"
			},
			{
				"type": "color",
				"id": "color_heading",
				"label": "Heading",
				"default": "#1a1c1d"
			},
			{
