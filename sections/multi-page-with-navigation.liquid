{%- liquid
	assign section_heading = section.settings.heading
	assign section_description = section.settings.description

	assign disable_top_spacing = section.settings.disable_top_spacing
	assign disable_bottom_spacing = section.settings.disable_bottom_spacing
-%}

{{ 'multi-page-with-navigation.css' | asset_url | stylesheet_tag }}
<multi-page-with-navigation class="multi-page-with-navigation section-spacing{% if disable_top_spacing %} section-spacing--disable-top{% endif %}{% if disable_bottom_spacing %} section-spacing--disable-bottom{% endif %}">
	<div class="row">
		<div class="small-12 columns">
			{%- render 'section-header', section_heading: section_heading, section_description: section_description -%}
		</div>
	</div>
	<div class="multi-page-with-navigation--inner">
		<div class="multi-page-with-navigation--menu heading-font">
			<div>
				{%- for block in section.blocks -%}
					{%- if block.settings.page -%}
						<button class="multi-page-with-navigation--button{% if forloop.index == 1 %} active{%- endif -%}">
							{%- liquid
								assign onboarding = 'onboarding.page_title' | t
								if block.settings.page.title != blank
									echo block.settings.page.title
								else
									echo onboarding
								endif
							-%}
						</button>
					{%- endif -%}
				{%- endfor -%}
			</div>
		</div>
		<div class="multi-page-with-navigation--content">
			{%- for block in section.blocks -%}
				<div class="multi-page-with-navigation--page">
					{%- if section.settings.show_page_title -%}
						<h2 class="h3">
							{%- liquid
								assign onboarding = 'onboarding.page_title' | t
								if block.settings.page.title != blank
									echo block.settings.page.title
								else
									echo onboarding
								endif
							-%}
						</h2>
					{%- endif -%}
					{%- if block.settings.page.content != blank -%}
						<div class="rte">
							{{ block.settings.page.content }}
						</div>
			    {%- else -%}
			      <div class="thb-placeholder">
			        {{ 'page' | placeholder_svg_tag: 'page-placeholder' }}
			      </div>
			    {%- endif -%}
				</div>
			{%- endfor -%}
		</div>
	</div>
</multi-page-with-navigation>
<script src="{{ 'multi-page-with-navigation.js' | asset_url }}" defer="defer"></script>
{% schema %}
  {
    "name": "Multi page navigation",
    "settings": [
			{
				"type": "text",
				"id": "heading",
				"label": "Heading",
				"default": "Multi page navigation"
			},
			{
				"type": "richtext",
				"id": "description",
				"label": "Description",
				"default": "<p>Add a short description for this section</p>"
			},
			{
				"type": "checkbox",
				"id": "show_page_title",
				"default": true,
				"label": "Show page titles above each content"
			},
			{
        "type": "header",
        "content": "Spacing"
      },
			{
				"type": "checkbox",
				"id": "disable_top_spacing",
				"default": false,
				"label": "Remove top spacing"
			},
			{
				"type": "checkbox",
				"id": "disable_bottom_spacing",
				"default": false,
				"label": "Remove bottom spacing"
			}
    ],
    "blocks": [
      {
        "type": "page",
        "name": "Page",
        "settings": [
					{
						"type": "page",
						"id": "page",
						"label": "Page",
						"info": "Contact pages will not display a contact form."
					}
        ]
      }
    ],
    "presets": [
      {
        "name": "Multi page navigation",
				"blocks": [
					{
						"type": "page"
					},
					{
						"type": "page"
					},
					{
						"type": "page"
					}
				]
      }
    ]
  }
{% endschema %}
